{
  "name": "wishlist-backend",
  "version": "1.0.0",
  "description": "Backend for Kero Wishlist, a social wishlist platform.",
  "author": "Seu Nome",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "cross-env AWS_PROFILE=kero-wishlist sls offline start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy:dev": "cross-env AWS_PROFILE=kero-wishlist sls deploy --stage development",
    "deploy:prod": "cross-env AWS_PROFILE=kero-wishlist sls deploy --stage production",
    "remove:dev": "cross-env AWS_PROFILE=kero-wishlist sls remove --stage development",
    "remove:prod": "cross-env AWS_PROFILE=kero-wishlist sls remove --stage production",
    "restart": "./kill-port.sh && npm run start:dev",
    "kill-all": "./kill-all.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:config": "ts-node scripts/test-all.ts",
    "test:cognito": "ts-node scripts/test-cognito.ts",
    "test:email": "ts-node scripts/test-email.ts",
    "test:ssm": "cross-env AWS_PROFILE=kero-wishlist ts-node scripts/test-ssm.ts",
    "test:ssm-force": "cross-env AWS_PROFILE=kero-wishlist NODE_ENV=production ts-node scripts/test-ssm.ts",
    "test:aws": "cross-env AWS_PROFILE=kero-wishlist ts-node scripts/test-aws-connection.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.50.0",
    "@aws-sdk/client-ssm": "^3.50.0",
    "@aws-sdk/client-sts": "^3.911.0",
    "@codegenie/serverless-express": "^4.14.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mongoose": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.3.1",
    "mongoose": "^8.8.4",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/aws-lambda": "^8.10.119",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.2.0",
    "serverless-plugin-typescript": "^2.1.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
